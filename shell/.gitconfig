[user]
	name = Harry Jeffery
	email = harry@exec64.co.uk
[core]
	editor = vim
	autocrlf = input
[color]
	ui = true
[push]
	default = simple
[rerere]
  enabled = true
[alias]
  co = checkout
  ci = commit
  s = status -s -b
  st = status
  sh = show
  sa = stash
  b = branch
  bb = branch --verbose --verbose
  bu = !git fetch --all --prune && git branch --verbose --verbose
  ll  = log --pretty=format:"%C(yellow)%h\\ %C(red)%t\\ %Creset%s%Cblue\\ [%cn]%C(green)%d" --decorate
  l   = !git ll -n 15
  lg  = !git ll --graph
  d = diff
  ds = diff --staged
  a = add
  pl = !git fetch --all --prune && git rebase FETCH_HEAD
  ps = push
  f = fetch --all --prune
  rb = rebase
  rbi = rebase --interactive --autosquash
  rbh = rebase --interactive --autosquash HEAD~10
  fix = commit --fixup
